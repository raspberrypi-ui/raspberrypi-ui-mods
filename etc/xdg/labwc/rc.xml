<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">

  <theme>
    <name>PiXflat</name>
    <cornerRadius>0</cornerRadius>
    <keepBorder>yes</keepBorder>
    <font place="ActiveWindow">
      <name>PibotoLt</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>PibotoLt</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="OnScreenDisplay">
      <name>PibotoLt</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <dropShadows>yes</dropShadows>
  </theme>

  <keyboard>
    <numlock>off</numlock>
    <default />
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>wfpanelctl volumepulse volu</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>wfpanelctl volumepulse vold</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>wfpanelctl volumepulse mute</command>
      </action>
    </keybind>
    <keybind key="Super_L" onRelease="yes">
      <action name="Execute">
        <command>wfpanelctl smenu menu</command>
      </action>
    </keybind>
    <keybind key="C-A-w">
      <action name="Execute">
         <command>wfpanelctl netman menu</command>
      </action>
    </keybind>
    <keybind key="C-A-b">
      <action name="Execute">
         <command>wfpanelctl bluetooth menu</command>
      </action>
    </keybind>
    <keybind key="C-A-t">
      <action name="Execute">
         <command>lxterminal</command>
      </action>
    </keybind>
    <keybind key="C-A-space">
      <action name="Execute">
         <command>gui-pkinst orca reboot</command>
      </action>
    </keybind>
    <keybind key="C-A-Delete">
      <action name="Execute">
         <command>lxde-pi-shutdown-helper</command>
      </action>
    </keybind>
    <keybind key="XF86PowerOff" onRelease="yes">
      <action name="Execute">
        <command>pwrkey</command>
      </action>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>grim</command>
      </action>
    </keybind>
    <keybind key="C-A-m">
      <action name="ToggleMagnify" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Title">
      <mousebind button="Right" action="Click">
      </mousebind>
    </context>
    <context name="WindowMenu">
      <mousebind button="Left" action="Click">
      </mousebind>
      <mousebind button="Right" action="Click">
      </mousebind>
    </context>
    <context name="All">
      <mousebind direction="W-Up" action="Scroll">
        <action name="ZoomIn" />
      </mousebind>
      <mousebind direction="W-Down" action="Scroll">
        <action name="ZoomOut" />
      </mousebind>
     </context>
  </mouse>

  <windowRules>
    <windowRule identifier="Kodi" serverDecoration="yes" />
  </windowRules>

  <snapping>
    <range>0</range>
    <topMaximize>no</topMaximize>
  </snapping>

  <magnifier>
    <width>-1</width>
    <height>-1</height>
    <initScale>2.0</initScale>
    <increment>0.2</increment>
    <useFilter>false</useFilter>
  </magnifier>

  <windowSwitcher show="yes" preview="yes" outlines="yes" allWorkspaces="no">
    <fields>
      <field content="title" width="100%" />
    </fields>
  </windowSwitcher>

  <touch deviceName="10-0038 generic ft5x06 (79)" mapToOutput="DSI-1" />
  <touch deviceName="6-0038 generic ft5x06 (79)" mapToOutput="DSI-1" />
  <touch deviceName="4-0038 generic ft5x06 (79)" mapToOutput="DSI-2" />
  <touch deviceName="10-0038 generic ft5x06 (00)" mapToOutput="DSI-1" />
  <touch deviceName="6-0038 generic ft5x06 (00)" mapToOutput="DSI-1" />
  <touch deviceName="4-0038 generic ft5x06 (00)" mapToOutput="DSI-2" />
  <touch deviceName="10-005d Goodix Capacitive TouchScreen" mapToOutput="DSI-1" />
  <touch deviceName="6-005d Goodix Capacitive TouchScreen" mapToOutput="DSI-1" />
  <touch deviceName="4-005d Goodix Capacitive TouchScreen" mapToOutput="DSI-2" />

</openbox_config>

